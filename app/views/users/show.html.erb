<% if @user %>
<h2>User: <%= @user.first.name %></h2>

<h3>Tags</h3>
<% @user.first.tags.each do |tag| %>
<%= link_to tag.tag, tag %>
<% end %>

<h3>Comments</h3>
<% @user.first.comments.each do |comment| %>
   <p><%= "#{comment.comments.slice(0,50)}..." %> at <%= link_to comment.title, "#{comment.link}?comment=true" %></p>	
<% end %>

<% end %>