<% content_for :head do %><link rel="unapi-server" type="application/xml" title="unAPI"
    href="<%= url_for(:action => 'index', :controller=> 'unapi', :only_path => false)%>" />
<% end %>
<abbr class="unapi-id" title="<%= url_for(:only_path => false) %>"></abbr>
<%= make_header "Series" %>
<div class="entity_data">
<%= make_title @series.Series_title %>
<%= simple_field "Date range", @series.date_range unless @series.contents_date_range %>
<%= simple_field "Contents date range", @series.contents_date_range %>
<%= rich_field "Descriptive note", @series.Descriptive_note %>
<%= simple_field "Format", @series.Format %>
<%= simple_field "Arrangement", @series.Arrangement %>
<%= simple_field "Copies", @series.Copies %>
<%= simple_field "Bridging aids", @series.Bridging_aids %>
<%= simple_field "Series control status", @series.Series_control_status %>
<%= simple_field "Location", @series.Repository %>
<% current_uri = request.env['PATH_INFO'] %>
</div>

<div class="entity_relations">

<% if @creating_agencies.first %>
<%= render :partial => 'relations/agencies', :object => @creating_agencies, :locals => {:title => "Creating agency", :browse_uri => "#{current_uri}/agencies_creating"} %>
<% end %>

<% if @persons.first %>
<%= render :partial => 'relations/persons', :object => @persons, :locals => {:title => "Persons creating this series", :browse_uri => "#{current_uri}/persons"} %>
<% end %>

<% if @controlling_agencies.first %>
<%= render :partial => 'relations/agencies', :object => @controlling_agencies, :locals => {:title => "Current agency responsible", :browse_uri => "#{current_uri}/agencies_controlling"} %>
<% end %>

<% if @activities.first %>
<%= render :partial => 'relations/activities', :object => @activities, :locals => {:title => "Activities documented by this series", :browse_uri => "#{current_uri}/activities"} %>
<% end %>

<% if @preceding_series.first %>
<%= render :partial => 'relations/series', :object => @preceding_series, :locals => {:title => "Preceding series", :browse_uri => "#{current_uri}/preceding"} %>
<% end %>

<% if @succeeding_series.first %>
<%= render :partial => 'relations/series', :object => @succeeding_series, :locals => {:title => "Succeeding series", :browse_uri => "#{current_uri}/succeeding"} %>
<% end %>

<% if @related_series.first %>
<%= render :partial => 'relations/series', :object => @related_series, :locals => {:title => "Related series", :browse_uri => "#{current_uri}/related"} %>
<% end %>

<% if @controlling_series.first %>
<%= render :partial => 'relations/series', :object => @controlling_series, :locals => {:title => "Controlling series", :browse_uri => "#{current_uri}/controlling"} %>
<% end %>

<% if @controlled_series.first %>
<%= render :partial => 'relations/series', :object => @controlled_series, :locals => {:title => "Controlled series", :browse_uri => "#{current_uri}/controlled"} %>
<% end %>

<% if @items.first %>
<%= render :partial => 'relations/items', :object => @items, :locals => {:title => "Items in this series", :browse_uri => "#{current_uri}/items"} %>
<% end %>

</div>
