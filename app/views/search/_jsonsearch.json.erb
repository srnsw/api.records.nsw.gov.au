<% link = search_url(jsonsearch.class_name, jsonsearch.stored(:id), false) %>
{
  "term": "<%= jsonsearch.class_name %>",
  "title": "<%= jsonsearch.stored(:title) %>",
  "href": "<%= link %>",
  <% if jsonsearch.highlight(:description)%>
  "highlight": "<%= jsonsearch.highlight(:description).format {|fragment| content_tag(:em, fragment)}.html_safe %>",
  <% end %>
  "updated": "<%= SearchHelper::LAST_MODIFIED %>"
}
